<%- include('./inc/header.ejs') %>
    <div class="row">
        <div class="col-lg-3">

        </div>
        <div class="col-lg-3 pt-4">
            <h5 class="text-warning">Edit Profile</h5>
            <div class="accordion" id="accordionExample">
                <div class="card bg-dark text-warning">
                    <div class="card-header" id="headingOne">
                        <h2 class="mb-0">
                            <button class="btn btn-link collapsed text-warning" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                Cover Picture
                            </button>
                        </h2>
                    </div>
              
                    <div id="collapseOne" class="collapse bg-dark text-warning" aria-labelledby="headingOne" data-parent="#accordionExample">
                        <div class="card-body">
                            <div class="row mb-2">
                                <div class="col-lg-12">
                                    <% if(logUser.coverPic) { %>
                                        <img src="../uploads/<%- logUser.username %>/<%- logUser.coverPic %>" width="100%" height="300">
                                    <% } else { %>
                                        <img src="../img/no_cover.jpg" width="100%" height="300">
                                    <% } %>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <form method="POST" action="/mobile/edit/cover" enctype="multipart/form-data">
                                        <div class="input-group mb-3">
                                            <div class="custom-file">
                                                <input type="file" class="custom-file-input" id="cover" name="cover">
                                                <label class="custom-file-label" for="cover" aria-describedby="inputGroupFileAddon02">Choose file</label>
                                            </div>
                                            <div class="input-group-append">
                                                <button type="submit">Upload</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card bg-dark text-warning">
                    <div class="card-header" id="headingTwo">
                        <h2 class="mb-0">
                            <button class="btn btn-link collapsed text-warning" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                Profile Picture
                            </button>
                        </h2>
                    </div>
                    <div id="collapseTwo" class="collapse bg-dark text-warning" aria-labelledby="headingTwo" data-parent="#accordionExample">
                        <div class="card-body">
                            <form method="POST" action="/mobile/edit/avatar" enctype="multipart/form-data">
                                <div class="row mb-2">
                                    <div class="col-lg-12">
                                        <% if(logUser.avatar) { %>
                                            <img src="../uploads/<%- logUser.username %>/<%- logUser.avatar %>" width="200" height="200">
                                        <% } else { %>
                                            <img src="../img/no_pic.jpg" width="200" height="200">
                                        <% } %>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <form method="POST" action="/mobile/edit/avatar" enctype="multipart/form-data">
                                            <div class="input-group mb-3">
                                                <div class="custom-file">
                                                    <input type="file" class="custom-file-input" id="avatar" name="avatar">
                                                    <label class="custom-file-label" for="avatar" aria-describedby="inputGroupFileAddon02">Choose file</label>
                                                </div>
                                                <div class="input-group-append">
                                                    <button type="submit">Upload</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="card bg-dark text-warning">
                    <div class="card-header" id="headingThree">
                        <h2 class="mb-0">
                            <button class="btn btn-link collapsed text-warning" type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                Edit Name
                            </button>
                        </h2>
                    </div>
                    <div id="collapseThree" class="collapse bg-dark text-warning" aria-labelledby="headingThree" data-parent="#accordionExample">
                        <div class="card-body">
                            <form method="POST" action="/mobile/edit/name">
                                <div class="row mb-2">
                                    <div class="col">
                                        <input type="text" class="form-control" id="firstname" name="firstname" value="<%- logUser.firstname %>">
                                    </div>
                                    <div class="col pl-0">
                                        <input type="text" class="form-control" id="lastname" name="lastname" value="<%- logUser.lastname %>">
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col">
                                        <button class="btn btn-primary btn-md" type="submit">Save</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="card bg-dark text-warning">
                    <div class="card-header" id="headingFour">
                        <h2 class="mb-0">
                            <button class="btn btn-link collapsed text-warning" type="button" data-toggle="collapse" data-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                                Edit Location
                            </button>
                        </h2>
                    </div>
                    <div id="collapseFour" class="collapse bg-dark text-warning" aria-labelledby="headingFour" data-parent="#accordionExample">
                        <div class="card-body">
                            <form method="POST" action="/mobile/edit/location">
                                <div class="row mb-2">
                                    <div class="col">
                                        <% if(logUser.city) { %>
                                            <input type="text" class="form-control" id="city" name="city" value="<%- logUser.city %>">
                                        <% } else { %>
                                            <input type="text" class="form-control" id="city" name="city" placeholder="Enter A City">
                                        <% } %>
                                    </div>
                                    <div class="col pl-0">
                                        <% if(logUser.state) { %>
                                            <input type="text" class="form-control" id="state" name="state" value="<%- logUser.state %>">
                                        <% } else { %>
                                            <input type="text" class="form-control" id="state" name="state" placeholder="Enter A State">
                                        <% } %>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col">
                                        <select id="country" name="country" class="form-control">
                                            <option value="<%- logUser.country %>"><%- logUser.country %></option>
                                            <%- include('./inc/country_list.ejs') %>
                                        </select>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col">
                                        <button class="btn btn-primary btn-md" type="submit">Save</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="card bg-dark text-warning">
                    <div class="card-header" id="headingFive">
                        <h2 class="mb-0">
                            <button class="btn btn-link collapsed text-warning" type="button" data-toggle="collapse" data-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive">
                                Edit About Me
                            </button>
                        </h2>
                    </div>
                    <div id="collapseFive" class="collapse bg-dark text-warning" aria-labelledby="headingFive" data-parent="#accordionExample">
                        <div class="card-body">
                            <form method="POST" action="/mobile/edit/bio">
                                <div class="row mb-2">
                                    <div class="col">
                                        <% if(logUser.bio) { %>
                                            <textarea class="form-control" id="bio" name="bio" rows="5" cols="0" value="<%- logUser.bio %>"><%- logUser.bio %></textarea>
                                        <% } else { %>
                                            <textarea class="form-control" id="bio" name="bio" rows="5" cols="0" placeholder="Write Something About Yourself"></textarea>
                                        <% } %>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col">
                                        <button class="btn btn-primary btn-md" type="submit">Save</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3"></div>
    </div>
<%- include('./inc/footer.ejs') %>