<%- include('./inc/header.ejs') %>
<div class="row">
    <div class="col-lg-12">
        <% if(user.coverPic) { %>
            <div class="jumbotron jumbotron-fluid" style="min-height: 200px;">
                <img src="../uploads/<%- user.username %>/<%- user.coverPic %>" width="100%" height="200">
            </div>
        <% } else { %>
            <img src="/img/no_cover.jpg" width="100%" height="200">
        <% } %>
    </div>
</div>
<div class="row" style="margin-top: -50px;">
    <div class="col-lg-12 text-center">
        <% if(user.avatar) { %>
            <img src="../uploads/<%- user.username %>/<%- user.avatar %>" width="100" height="100" class="rounded-circle">
        <% } else { %>
            <img src="/img/no_pic.jpg" width="100" height="100" class="rounded-circle">
        <% } %>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card bg-dark text-light mt-3">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-10">
                        <h3 class="card-title"><%- user.firstname %> <%- user.lastname %></h3>
                        <p class="text-light"><%- user.subscribers.length %> Subscribers &bull; <%- user.subscriptions.length %> Following</p>
                    </div>
                    <div class="col-lg-2">
                        <% if(user.username == logUser.username) { %>
                            <a class="btn btn-primary btn-block" href="/mobile/edit_profile">Edit Profile</a>
                        <% } else if(logUser.subscriptions == user.username) { %>
                            <form method="POST" action="/mobile/unsubscribe/<%- user.username %>">
                                <button class="btn btn-primary btn-block" type="submit">Unsubscribe</button>
                            </form>
                        <% } else { %>
                            <form method="POST" action="/mobile/subscribe/<%- user.username %>">
                                <button class="btn btn-outline-primary btn-block" type="submit">Subscribe</button>
                            </form>
                        <% } %>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <% if(user.city && user.state) { %>
                            <p class="m-0"><%- user.city %>, <%- user.state %></p>
                        <% } else { %>
                            <p class="m-0"><%- user.country %></p>
                        <% } %>
                        <% if(user.bio) { %>
                            <p class="m-0"><%- user.bio %></p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('./inc/footer.ejs') %>