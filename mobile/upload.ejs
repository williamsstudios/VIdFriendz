<%- include('./inc/header.ejs') %>
<div class="row">
    <div class="col-lg-12 p-0">
        <div class="card mt-4 border-0" style="background: #1d1d1d;">
            <div class="card-body">
                <h5 class="card-title text-light">Upload Videos</h5>
                <hr />
                <form method="POST" action="/mobile/upload" enctype="multipart/form-data">
                    <label for="file">
                        <div id="drop_zone">
                            <p>Click To Add Video File</p>
                        </div>
                    </label>
                    <input type="file" id="file" name="file" style="display: none;">
                    <button type="submit" class="btn btn-primary btn-block mt-3">Upload</button>
                    <h6 class="text-danger">*NOTE: Please allow a few moments for the file to upload do not refresh or back out of this page</h6>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-4"></div>
</div>

