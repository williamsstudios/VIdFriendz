<%- include('./inc/header.ejs') %>
<div class="row">
    <div class="col-lg-12">
        <div class="jumbotron jumbotron-fluid" style="min-height: 300px; padding: 0px;">
            <% if(user.coverPic) { %>
                <img src="/uploads/<%- user.username %>/<%- user.coverPic %>" width="100%" height="300">
            <% } else { %>
                <img src="/img/no_cover.jpg" width="100%" height="300">
            <% } %>
        </div>
    </div>
</div>
<div class="row" style="margin-top: -150px;">
    <div class="col-lg-12 text-center">
        <% if(user.avatar) { %>
            <img src="/uploads/<%- user.username %>/<%- user.avatar %>" width="200" height="200" class="rounded-circle">
        <% } else { %>
            <img src="/img/no_pic.jpg" width="200" height="200" class="rounded-circle">
        <% } %>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card bg-dark text-light mt-3">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-10">
                        <h3 class="card-title"><%- user.firstname %> <%- user.lastname %></h3>
                    </div>
                    <div class="col-lg-2">
                        <% if(user.username == logUser.username) { %>
                            <a class="btn btn-primary btn-block" href="#" data-toggle="modal" data-target="#editModalScrollable">Edit Profile</a>
                        <% } else if(logUser.subscriptions == user.username) { %>
                            <form method="POST" action="/users/unsubscribe/<%- user.username %>">
                                <button class="btn btn-primary btn-block" type="submit">Unsubscribe</button>
                            </form>
                        <% } else { %>
                            <form method="POST" action="/users/subscribe/<%- user.username %>">
                                <button class="btn btn-outline-primary btn-block" type="submit">Unsubscribe</button>
                            </form>
                        <% } %>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <% if(user.city && user.state) { %>
                            <p class="m-0"><%- user.city %>, <%- user.state %></p>
                        <% } else { %>
                            <p class="m-0"><%- user.country %></p>
                        <% } %>
                        <% if(user.bio) { %>
                            <p class="m-0"><%- user.bio %></p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card bg-dark">
            <div class="card-body">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="videos-tab" data-toggle="tab" href="#videos" role="tab" aria-controls="videos" aria-selected="true">Videos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="likes-tab" data-toggle="tab" href="#likes" role="tab" aria-controls="likes" aria-selected="false">Likes</a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="videos" role="tabpanel" aria-labelledby="videos-tab">
                        <div class="row">
                            <div class="col-lg-12">
                                <h3 class="card-title text-light mt-3">Videos</h3>
                            </div>
                        </div>
                        <% for(var v = 0; v<videos.length; v++) { %>
                            <div class="row mb-2" onclick="window.location.href='/videos/watch/<%- videos[v]._id %>'" style="cursor: pointer;">
                                <div class="col-lg-3">
                                    <video src="/uploads/<%- user.username %>/<%- videos[v].filename %>" width="100%" height="200"></video>
                                </div>
                                <div class="col-lg-9 pt-5">
                                    <h4 class="card-title text-light"><%- videos[v].title %></h4>
                                    <p class="m-0 text-light"><%- videos[v].description %></p>
                                    <p class="m-0 text-light"><%- videos[v].views.length %> views</p>
                                </div>
                            </div>
                        <% } %>
                    </div>
                    <div class="tab-pane fade" id="likes" role="tabpanel" aria-labelledby="likes-tab">...</div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Edit Profile Modal -->
<div class="modal fade" id="editModalScrollable" tabindex="-1" role="dialog" aria-labelledby="editModalScrollableTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content bg-dark">
            <div class="modal-header">
                <h5 class="modal-title text-warning" id="editModalScrollableTitle">Edit Profile Information</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="accordion" id="accordionExample">
                    <div class="card bg-dark text-light">
                        <div class="card-header bg-dark text-warning" id="headingOne">
                            <h2 class="mb-0">
                                <button class="btn btn-link btn-block text-warning text-left" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    Profile Picture
                                </button>
                            </h2>
                        </div>
                        <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                            <div class="card-body">
                                <form method="POST" action="/users/edit/avatar" enctype="multipart/form-data">
                                    <div class="row">
                                        <div class="col-lg-4"></div>
                                        <div class="col-lg-4">
                                            <input type="file" class="custom-file-input" id="avatar" name="avatar">
                                            <label for="avatar">
                                                <% if(logUser.avatar) { %>
                                                    <img src="/uploads/<%- logUser.username %>/<%- logUser.avatar %>" width="200" height="200" class="rounded-circle">
                                                <% } else { %>
                                                    <img src="/img/no_pic.jpg" width="200" height="200" class="rounded-circle">
                                                <% } %>
                                                <button type="submit" class="btn btn-primary btn-block mt-5">Save</button>
                                            </label>
                                        </div>
                                        <div class="col-lg-4"></div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="card bg-dark text-light">
                        <div class="card-header bg-dark text-warning" id="headingTwo">
                            <h2 class="mb-0">
                                <button class="btn btn-link btn-block text-warning text-left" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
                                    Name
                                </button>
                            </h2>
                        </div>
                        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                            <div class="card-body">
                                <form method="POST" action="/users/edit/name">
                                    <div class="row mb-2">
                                        <div class="col">
                                            <input type="text" class="form-control" id="firstname" name="firstname" value="<%- logUser.firstname %>">
                                        </div>
                                        <div class="col pl-0">
                                            <input type="text" class="form-control" id="lastname" name="lastname" value="<%- logUser.lastname %>">
                                        </div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col">
                                            <button type="submit" class="btn btn-primary btn-md">Save</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="card bg-dark text-light">
                        <div class="card-header bg-dark text-warning" id="headingThree">
                            <h2 class="mb-0">
                                <button class="btn btn-link btn-block text-warning text-left collapsed" type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                    Location
                                </button>
                            </h2>
                        </div>
                        <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordionExample">
                            <div class="card-body">
                                <form method="POST" action="/users/edit/location">
                                    <div class="row mb-2">
                                        <div class="col">
                                            <% if(logUser.city) { %>
                                                <input type="text" class="form-control" id="city" name="city" value="<%- logUser.city %>">
                                            <% } else { %>
                                                <input type="text" class="form-control" id="city" name="city" placeholder="City">
                                            <% } %>
                                        </div>
                                        <div class="col pl-0">
                                            <% if(logUser.state) { %>
                                                <input type="text" class="form-control" id="state" name="state" value="<%- logUser.state %>">
                                            <% } else { %>
                                                <input type="text" class="form-control" id="state" name="state" placeholder="State">
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col">
                                            <select class="form-control" id="country" name="country">
                                                <option value="<%- logUser.country %>"><%- logUser.country %></option>
                                                <%- include('./inc/country_list.ejs') %>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col">
                                            <button type="submit" class="btn btn-primary btn-md">Save</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="card bg-dark text-light">
                        <div class="card-header bg-dark text-warning" id="headingFour">
                            <h2 class="mb-0">
                                <button class="btn btn-link btn-block text-warning text-left collapsed" type="button" data-toggle="collapse" data-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                                    About Me
                                </button>
                            </h2>
                        </div>
                        <div id="collapseFour" class="collapse" aria-labelledby="headingFour" data-parent="#accordionExample">
                            <div class="card-body">
                                <form method="POST" action="/users/edit/bio">
                                    <div class="row mb-2">
                                        <div class="col">
                                            <% if(logUser.bio) { %>
                                                <textarea class="form-control" rows="5" cols="0" id="bio" name="bio" value="<%- logUser.bio %>"></textarea>
                                            <% } else { %>
                                                <textarea class="form-control" rows="5" cols="0" id="bio" name="bio" placeholder="Write Something About Yourself"></textarea>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col">
                                            <button type="submit" class="btn btn-primary btn-md">Save</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('./inc/footer.ejs') %>